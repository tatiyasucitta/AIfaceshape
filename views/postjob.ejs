<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- <link rel="stylesheet" href="./../css/appDesign.css"> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/postjob.css">
    <link rel="stylesheet" href="/styles/pop-up/post.css" />

    <title>Document</title>
</head>
<body>
    <div class="navbar1">
        <div class="contLogo">TALENTSEEKR</div>
        <div class="contNavbarComponent">
            <a href="/activity"> 
                <div class="navbarButtonPage">
                <div class="buttonIconPage">
                    <img src="images/nav-icon/save.png">
                </div>
                <span class="buttonTextPage"> Saved </span>
                </div>
            </a>

            
            <a href="/">
                <div class="navbarButtonPage">
                     <div class="buttonIconPage">
                        <img src="images/nav-icon/Home.png" />
                    </div>
                    <span class="buttonTextPage"> Home</span>
                </div>
            </a>

            
            <a href="/explore">
                <div class="navbarButtonPage">
                <div class="buttonIconPage">
                    <img src="images/nav-icon/explore.png" />
                </div>
                <span class="buttonTextPage" > Explore</span>
                </div>
            </a>
            <div class="searchBar">
            <img src="images/nav-icon/Map.png" />
            <form>
                <input class="searchInput" type="search" placeholder="Indonesia" />
            </form>
            </div>
            <div class="navbarButtonPage">
                <div class="buttonIconPage dropdown">
                    <img src="images/nav-icon/hamburger.jpg" alt="">
                    <div class="dropdown-content">
                        <a href="/profile-page"> <div class="option">
                            <div class="userProfileImage">
                                <img src="images/dashboard/profile.png" />
                            </div>
                            <p>Profile</p>
                        </div>
                    </a>
                        <div class="option" id="openPopupPostBtn" href="">Post</div>
                        <a href="/post-job"><div class="option" >Post a Job</div></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <form class="job-form" method="POST" action="/upload-job" enctype="multipart/form-data">
            
            <div class="form-title">
                <h1>Post a job for free</h1>
                <p>increase the quality of your hire</p>
            </div>
         

            <div class="data">
                <label for="" class="form-label">Company Logo</label>
                <input type="file" id="file-input" accept="image/*" name="logo">
            </div>
            <div class="data">
                <label for="" class="form-label">Job title</label>
                <input  class="form-control" placeholder="Add the title you are hiring for"  name="title" required>
            </div>
            <div class="data">
                <label for="" class="form-label">Company</label>
                <input  class="form-control"  name="company" required>
            </div>
            <div class="data">
                <label for="" class="form-label">Fee</label>
                <input  class="form-control" placeholder="add the model fees" name="fee" required >                    
            </div>
            <div class="data">
                <label for="" class="form-label">Job Location</label>
                <input type="" class="form-control" placeholder="city/province" name="location" required>
            </div>
            <div class="data">
                <label for="" class="form-label">Duration Unit</label>
                <select class="form-select" aria-label="Default select example" class="workspaceType" name="duration_unit" required>
                    <option selected>Open this select menu</option>
                    <option value="Day">Day</option>
                    <option value="Hour">Hour(s)</option>
                </select>
            </div>
            <div class="data">
                <label for="" class="form-label">Duration Amount</label>
                <input type="number" class="form-control" placeholder="min: 1" name="duration_amount" min="1" required>
            </div>
            <div class="data">
                <label for="" class="form-label">Job Description</label>
                <textarea type="text" class="form-control larger" placeholder="" name="description" min="1" required></textarea>
            </div>
            <div class="data">
                <label for="" class="form-label">Job Requirements</label>
                <textarea type="text" class="form-control larger" placeholder="" name="requirements" required></textarea>
            </div>
            <div class="button-container">
                <button class="submit" >Submit</button>
            </div>
        </form>
    </div>
    <form id="popupPost" class="popupPost" method="POST" action="/upload-post" enctype="multipart/form-data">
        <div class="popupPost-content">
            <span id="closePopupPostBtn" class="closePost">&times;</span>
            <div class="user-infoPost">
                <% if(locals.data){ %>
                    <img src=<%=data.profile %> alt="User Image" class="user-imgPost">
                    <div>
                        <p class="user-namePost"> <%=data.UserName %></p>
                        <p class="post-visibilityPost">Post to Anyone</p>
                    </div>
                    <% } %>
            </div>
            <div class="post-desc">
                <textarea name="content" placeholder="What do you want to talk about?"></textarea >
            </div>
            <div class="post-options">
                <label for="post-img-input" class="icon">&#128247;</label>
                <input type="file" id="post-img-input" accept="image/*"  name="image" >
            </div>
            <div class="post-actions">
                <button class="post-btn">Post</button>
            </div>
        </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    <script>
        const dropdownBtn = document.querySelector('.dropdown');
        const dropdownContent = dropdownBtn.querySelector('.dropdown-content');
    
        dropdownBtn.addEventListener('click', function() {
        dropdownContent.classList.toggle('show');
        });
        
        // post
        document.getElementById('openPopupPostBtn').addEventListener('click', function() {
            document.getElementById('popupPost').style.display = 'flex';
        });
        
        document.getElementById('closePopupPostBtn').addEventListener('click', function() {
            document.getElementById('popupPost').style.display = 'none';
        });


        document.getElementById('post-img-input').addEventListener('change', function(event) {
            const file = event.target.files[0];
            if (file) {
                console.log('File selected:', file);
            }
        });
    </script>
</body>
</html>